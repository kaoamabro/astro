---
import Nav from '../components/Nav.astro'
import Master from '../layouts/Master.astro'

const posts = await Astro.glob('./blog/*.md') 
---
<Master>
	<h1 class="text-3xl font-bold text-sky-800">Astro</h1>
	<nav>
		<a href="/portfolio/folio-1">作品集一</a>
		<a href="/portfolio/folio-2">作品集二</a>
		<a href="/portfolio/folio-3">作品集三</a>
		<a href="/blog/post-1">post 1</a>
		<a href="/blog/post-2">post 2</a>
		<a href="/blog/post-3">post 3</a>
	</nav>
	{posts.map(post=><div><a href={post.url}>{post.frontmatter.title}</a></div>)}
</Master>